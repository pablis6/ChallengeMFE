{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/sopra-chat/src",
  "prefix": "challenge-mfe",
  "targets": {
    "build": {
      "executor": "@nrwl/angular:webpack-browser",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/apps/sopra-chat",
        "index": "apps/sopra-chat/src/index.html",
        "main": "apps/sopra-chat/src/main.ts",
        "polyfills": "apps/sopra-chat/src/polyfills.ts",
        "tsConfig": "apps/sopra-chat/tsconfig.app.json",
        "assets": [
          "apps/sopra-chat/src/favicon.ico",
          "apps/sopra-chat/src/assets"
        ],
        "styles": [
          "apps/sopra-chat/src/styles.css"
        ],
        "scripts": [],
        "customWebpackConfig": {
          "path": "apps/sopra-chat/webpack.config.js"
        }
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "fileReplacements": [
            {
              "replace": "apps/sopra-chat/src/environments/environment.ts",
              "with": "apps/sopra-chat/src/environments/environment.prod.ts"
            }
          ],
          "outputHashing": "all",
          "customWebpackConfig": {
            "path": "apps/sopra-chat/webpack.prod.config.js"
          }
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@nrwl/angular:module-federation-dev-server",
      "configurations": {
        "production": {
          "browserTarget": "sopra-chat:build:production"
        },
        "development": {
          "browserTarget": "sopra-chat:build:development"
        }
      },
      "defaultConfiguration": "development",
      "options": {
        "port": 4200,
        "publicHost": "http://localhost:4200"
      }
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "sopra-chat:build"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "apps/sopra-chat/**/*.ts",
          "apps/sopra-chat/**/*.html"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "coverage/apps/sopra-chat"
      ],
      "options": {
        "jestConfig": "apps/sopra-chat/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
